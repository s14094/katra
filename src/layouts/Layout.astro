---
import "../styles/global.scss";
import logoImage from "../assets/logo.png";
import Image from "astro/components/Image.astro";
const base = import.meta.env.BASE_URL;
const {title = "xd"} = Astro.props;
---

<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>
<script>
    import AOS from "aos";
    AOS.init();
</script>
<header class="site-header">
    <div class="header-inner">
        <a class="site-brand" href={`${base}`} aria-label="strona glowna">
            <Image
                src={logoImage}
                width={logoImage.width}
                height={logoImage.height}
                alt="logo"
                loading="eager"
                fetchpriority="high"
            />
        </a>
        <nav>
            <a href={`${base}`}>Home</a>
            <a href={`${base}about/`}>O mnie</a>
            <a href={`${base}portfolio/`}>Portfolio</a>
            <a href={`${base}offer/`}>Oferta</a>
            <a href={`${base}contact/`}>Kontakt</a>
        </nav>
    </div>
</header>

<main>
    <slot/>
</main>

<footer>
    <div class="footer-grid">
        <div>
            <p class="footer-title">K.RADOMSKA</p>
            <p>Studio projektowania wn?trz skupione na ?wietle, fakturze i spokoju.</p>
        </div>
        <div>
            <p class="footer-heading">Kontakt</p>
            <p><a href="mailto:hello@cyan-chroma.com">hello@cyan-chroma.com</a></p>
            <p><a href="tel:+48600000000">+48 600 000 000</a></p>
        </div>
        <div>
            <p class="footer-heading">Oferta</p>
            <ul class="footer-links">
                <li><a href={`${base}offer/`}>Pakiety projektowe</a></li>
                <li><a href={`${base}portfolio/`}>Portfolio</a></li>
                <li><a href={`${base}contact/`}>Konsultacje</a></li>
            </ul>
        </div>
        <div>
            <p class="footer-heading">Social</p>
            <ul class="footer-links">
                <li>
                    <a class="social-link" href="https://www.instagram.com/k.radomska_interiors/">
                        <svg aria-hidden="true" viewBox="0 0 24 24" focusable="false">
                            <path
                                d="M7 3h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7a4 4 0 0 1 4-4zm10 2H7a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2zm-5 3.2a3.8 3.8 0 1 1 0 7.6 3.8 3.8 0 0 1 0-7.6zm0 2a1.8 1.8 0 1 0 0 3.6 1.8 1.8 0 0 0 0-3.6zm5.1-.9a.9.9 0 1 1 0-1.8.9.9 0 0 1 0 1.8z"
                                fill="currentColor"
                            />
                        </svg>
                        Instagram
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <p class="footer-meta">
        Copyright © 2026 | Wszystkie prawa zastrzeżone.</p>
</footer>
</body>
</html>
