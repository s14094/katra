---
import "../styles/global.scss";
import logoImage from "../assets/logo.jpeg";
const base = import.meta.env.BASE_URL;
const {title = "Cyan Chroma ? Studio wn?trz"} = Astro.props;
---

<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>
<header class="site-header">
    <div class="header-inner">
        <a class="site-brand" href={`${base}`} aria-label="Cyan Chroma - strona glowna">
            <img
                src={logoImage.src}
                width={logoImage.width}
                height={logoImage.height}
                alt="Cyan Chroma logo"
                decoding="async"
            />
        </a>
        <nav>
            <a href={`${base}`}>Home</a>
            <a href={`${base}about/`}>O mnie</a>
            <a href={`${base}portfolio/`}>Portfolio</a>
            <a href={`${base}offer/`}>Oferta</a>
            <a href={`${base}contact/`}>Kontakt</a>
        </nav>
    </div>
</header>

<main>
    <slot/>
</main>

<footer>
    <div class="footer-grid">
        <div>
            <p class="footer-title">K.Radomska</p>
            <p>Studio projektowania wn?trz skupione na ?wietle, fakturze i spokoju.</p>
        </div>
        <div>
            <p class="footer-heading">Kontakt</p>
            <p><a href="mailto:hello@cyan-chroma.com">hello@cyan-chroma.com</a></p>
            <p><a href="tel:+48600000000">+48 600 000 000</a></p>
        </div>
        <div>
            <p class="footer-heading">Oferta</p>
            <ul class="footer-links">
                <li><a href={`${base}offer/`}>Pakiety projektowe</a></li>
                <li><a href={`${base}portfolio/`}>Portfolio</a></li>
                <li><a href={`${base}contact/`}>Konsultacje</a></li>
            </ul>
        </div>
        <div>
            <p class="footer-heading">Social</p>
            <ul class="footer-links">
                <li><a href="https://www.instagram.com/k.radomska_interiors/">Instagram</a></li>
                <li><a href="https://pinterest.com/">Pinterest</a></li>
                <li><a href="https://www.behance.net/">Behance</a></li>
            </ul>
        </div>
    </div>
    <p class="footer-meta">
        Copyright © 2026 | Wszystkie prawa zastrzeżone.</p>
</footer>
</body>
</html>
