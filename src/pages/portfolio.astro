---
import Layout from "../layouts/Layout.astro";
import kolazImage from "../assets/kolaz.png";
import mokotow1 from "../assets/mokotow/1.jpeg";
import Image from "astro/components/Image.astro";
const base = import.meta.env.BASE_URL;
---

<Layout title="Portfolio — K.RADOMSKA">
    <section class="hero">
        <div class="hero-content">
            <p class="eyebrow">Portfolio</p>
            <h1>Realizacje pełne światła, równowagi i funkcji.</h1>
            <p class="lead">
                Poniżej znajdziesz wybrane projekty. Każdy z nich powstał w ścisłej
                współpracy z inwestorem i opiera się na indywidualnym scenariuszu życia.
            </p>
        </div>
        <div class="hero-media">
            <div class="media-frame">
                <Image
                    src={kolazImage}
                    width={kolazImage.width}
                    height={kolazImage.height}
                    alt="Kolaz projektow wnetrz"
                    loading="eager"
                    fetchpriority="high"
                />
            </div>
        </div>
    </section>

    <section class="section">
        <div class="section-header">
            <div>
                <p class="eyebrow">Wybrane projekty</p>
                <h2>Mieszkania, domy i wnętrza komercyjne</h2>
            </div>
        </div>
        <div class="section-grid">
            <a class="card card-link" href={`${base}portfolio/apartament-mokotow/`}>
                <div class="media-frame small">
                    <Image
                        src={mokotow1}
                        width={mokotow1.width}
                        height={mokotow1.height}
                        alt="Apartament Mokotow - strefa dzienna"
                        loading="lazy"
                    />
                </div>
                <h3>Apartament Mokotów</h3>
                <p>130 m², miękka paleta beżów, otwarta strefa dzienna.</p>
                <ul class="tag-list">
                    <li>mieszkanie</li>
                    <li>2024</li>
                    <li>Warszawa</li>
                </ul>
            </a>
            <article class="card">
                <div class="media-placeholder small">
                    <p>Dom pod lasem</p>
                </div>
                <h3>Dom pod lasem</h3>
                <p>200 m², naturalne drewno i tynki gliniane.</p>
                <ul class="tag-list">
                    <li>dom</li>
                    <li>2023</li>
                    <li>Konstancin</li>
                </ul>
            </article>
            <article class="card">
                <div class="media-placeholder small">
                    <p>Studio beauty</p>
                </div>
                <h3>Studio beauty</h3>
                <p>Kontrastowa recepcja, strefy pracy i relaksu.</p>
                <ul class="tag-list">
                    <li>komercyjne</li>
                    <li>2023</li>
                    <li>Łódź</li>
                </ul>
            </article>
            <article class="card">
                <div class="media-placeholder small">
                    <p>Loft Praga</p>
                </div>
                <h3>Loft Praga</h3>
                <p>Surowe materiały przełamane miękkimi tekstyliami.</p>
                <ul class="tag-list">
                    <li>mieszkanie</li>
                    <li>2022</li>
                    <li>Warszawa</li>
                </ul>
            </article>
            <article class="card">
                <div class="media-placeholder small">
                    <p>Biuro kreatywne</p>
                </div>
                <h3>Biuro kreatywne</h3>
                <p>Strefy skupienia, otwarte miejsca spotkań.</p>
                <ul class="tag-list">
                    <li>komercyjne</li>
                    <li>2022</li>
                    <li>Poznań</li>
                </ul>
            </article>
            <article class="card">
                <div class="media-placeholder small">
                    <p>Kamienica Śródmieście</p>
                </div>
                <h3>Kamienica Śródmieście</h3>
                <p>Odtworzone detale sztukatorskie i nowa funkcja.</p>
                <ul class="tag-list">
                    <li>mieszkanie</li>
                    <li>2021</li>
                    <li>Warszawa</li>
                </ul>
            </article>
        </div>
    </section>
</Layout>
