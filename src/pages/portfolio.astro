---
import Layout from "../layouts/Layout.astro";
import kolazImage from "../assets/kolaz.png";
import mokotow1 from "../assets/mokotow/1.jpeg";
import Image from "astro/components/Image.astro";
const base = import.meta.env.BASE_URL;
---

<Layout title="Portfolio — K.RADOMSKA">
    <section class="hero">
        <div class="hero-content">
            <p class="eyebrow">Portfolio</p>
            <h1>Realizacje pełne światła, równowagi i funkcji.</h1>
            <p class="lead">
                Poniżej znajdziesz wybrane projekty. Każdy z nich powstał w ścisłej
                współpracy z inwestorem i opiera się na indywidualnym scenariuszu życia.
            </p>
        </div>
        <div class="hero-media">
            <div class="media-frame">
                <Image
                    src={kolazImage}
                    width={kolazImage.width}
                    height={kolazImage.height}
                    alt="Kolaz projektow wnetrz"
                    loading="eager"
                    fetchpriority="high"
                />
            </div>
        </div>
    </section>

    <section class="section">
        <div class="section-header">
            <div>
                <p class="eyebrow">Wybrane projekty</p>
                <h2>Mieszkania, domy i wnętrza komercyjne</h2>
            </div>
        </div>

        <div class="section-grid portfolio-grid">
            <a class="portfolio-card" href={`${base}portfolio/apartament-mokotow/`} style={`--card-bg: url('${mokotow1.src}')`}>
                <div class="portfolio-card__content">
                    <h3>Apartament Mokotow</h3>
                    <p>130 m2, miekka paleta bezow, otwarta strefa dzienna.</p>
                    <ul class="tag-list">
                        <li>mieszkanie</li>
                        <li>2024</li>
                        <li>Warszawa</li>
                    </ul>
                </div>
            </a>
            <article class="portfolio-card">
                <div class="portfolio-card__content">
                    <h3>Dom pod lasem</h3>
                    <p>200 m2, naturalne drewno i tynki gliniane.</p>
                    <ul class="tag-list">
                        <li>dom</li>
                        <li>2023</li>
                        <li>Konstancin</li>
                    </ul>
                </div>
            </article>
            <article class="portfolio-card">
                <div class="portfolio-card__content">
                    <h3>Studio beauty</h3>
                    <p>Kontrastowa recepcja, strefy pracy i relaksu.</p>
                    <ul class="tag-list">
                        <li>komercyjne</li>
                        <li>2023</li>
                        <li>Lodz</li>
                    </ul>
                </div>
            </article>
            <article class="portfolio-card">
                <div class="portfolio-card__content">
                    <h3>Loft Praga</h3>
                    <p>Surowe materialy przelamane miekkimi tekstyliami.</p>
                    <ul class="tag-list">
                        <li>mieszkanie</li>
                        <li>2022</li>
                        <li>Warszawa</li>
                    </ul>
                </div>
            </article>
            <article class="portfolio-card">
                <div class="portfolio-card__content">
                    <h3>Biuro kreatywne</h3>
                    <p>Strefy skupienia, otwarte miejsca spotkan.</p>
                    <ul class="tag-list">
                        <li>komercyjne</li>
                        <li>2022</li>
                        <li>Poznan</li>
                    </ul>
                </div>
            </article>
            <article class="portfolio-card">
                <div class="portfolio-card__content">
                    <h3>Kamienica Srodmiescie</h3>
                    <p>Odtworzone detale sztukatorskie i nowa funkcja.</p>
                    <ul class="tag-list">
                        <li>mieszkanie</li>
                        <li>2021</li>
                        <li>Warszawa</li>
                    </ul>
                </div>
            </article>
        </div>
    </section>
</Layout>
